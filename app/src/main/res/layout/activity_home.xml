<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Activity.HomeActivity">

    <!-- Design logo by -> https://www.flaticon.com/authors/flat-icons -->

    <include
        android:id="@+id/topbar_home"
        layout="@layout/topbar_white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/topbar_home"
        android:background="@color/colorGrayShadow" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_imageProfileHome"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/icon_loading"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="0.5dp" />

        <TextView
            android:id="@+id/titlebar_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_myqueue_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topbar_home"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="17dp"
                    android:text="INFO ANTRIAN SAYA"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_currentDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="17dp"
                    android:layout_marginEnd="17dp"
                    android:text="@string/str_dot"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"
                android:layout_marginBottom="30dp">

                <RelativeLayout
                    android:id="@+id/rl_mydoctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/civ_mydoctor"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/icon_default_profile" />

                    <TextView
                        android:id="@+id/tv_namedoctor_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/civ_mydoctor"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="@string/str_dot" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_estimation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_toEndOf="@+id/rl_mydoctor">

                    <TextView
                        android:id="@+id/tv_terdaftar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TERDAFTAR"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/tv_belumdaftar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BELUM DAFTAR"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tv_estimasi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_terdaftar"
                        android:text="Estimasi Dipanggil"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_start_estimation_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_estimasi"
                        android:text="00 : 00"
                        android:textColor="@color/colorBlack"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_btnCheck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_start_estimation_home"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/bg_round_white"
                        android:paddingStart="10dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="5dp"
                        android:text="Cek Detail"
                        android:textColor="@color/colorBlack" />
                </RelativeLayout>

            </RelativeLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cv_myqueue_home"
        android:layout_centerHorizontal="true">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_doctorlist_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civ_iconDoctorHome"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/icon_doctor"
                    app:civ_border_color="@color/colorAccent"
                    app:civ_border_width="0.6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/civ_iconDoctorHome"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="Daftar Dokter"
                    android:textColor="@color/colorBlack" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_pickqueue_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="15dp"
            android:layout_toEndOf="@+id/cv_doctorlist_home"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civ_iconPickHome"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/icon_ticket"
                    app:civ_border_color="@color/colorAccent"
                    app:civ_border_width="0.6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/civ_iconPickHome"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="Ambil Antrian"
                    android:textColor="@color/colorBlack" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</RelativeLayout>